<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.savch.dypproj.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="48dp"
        android:layout_height="19dp"
        android:text="@string/login_label"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toLeftOf="@+id/textLoginCh"
        android:layout_marginRight="11dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textLocal"
        android:layout_width="74dp"
        android:layout_height="22dp"
        android:text="@string/localization_label"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        app:layout_constraintRight_toLeftOf="@+id/textLocalCh"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        tools:layout_editor_absoluteY="157dp"
        tools:layout_editor_absoluteX="11dp" />

    <TextView
        android:id="@+id/textLoginCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testLogin"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginRight="163dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textNameCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testName"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textLoginCh"
        android:layout_marginRight="161dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textLocalCh"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:text="testLocal"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="126dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textNameCh"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.947" />

    <TextView
        android:id="@+id/textComment"
        android:layout_width="63dp"
        android:layout_height="17dp"
        android:text="@string/comment_edit"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textLocal"
        app:layout_constraintRight_toLeftOf="@+id/textCommentEdit"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintVertical_bias="0.041" />

    <EditText
        android:id="@+id/textCommentEdit"
        android:layout_width="106dp"
        android:layout_height="38dp"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="115dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="276dp" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="49dp"
        android:layout_height="22dp"
        android:text="@string/name_label"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textLogin"
        app:layout_constraintRight_toLeftOf="@+id/textNameCh"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.484" />

    <Button
        android:id="@+id/loc_button"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:text="@string/location_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintBottom_toBottomOf="@+id/textLocalCh"
        android:layout_marginBottom="-12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>
