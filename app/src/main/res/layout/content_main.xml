<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.savch.dypproj.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="40dp"
        android:layout_height="21dp"
        android:text="@string/login_label"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toLeftOf="@+id/textLoginCh"
        android:layout_marginRight="11dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/textLocal"
        android:layout_width="78dp"
        android:layout_height="22dp"
        android:text="@string/localization_label"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        app:layout_constraintRight_toLeftOf="@+id/textLocalCh"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.173" />

    <TextView
        android:id="@+id/textLoginCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="139dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textNameCh"
        android:layout_width="106dp"
        android:layout_height="19dp"
        android:text=""
        tools:ignore="MissingConstraints"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textLoginCh"
        android:layout_marginLeft="139dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textName"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/textLocalCh"
        android:layout_width="87dp"
        android:layout_height="21dp"
        android:text=""
        tools:ignore="MissingConstraints"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textNameCh"
        android:layout_marginLeft="139dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textComment"
        android:layout_width="63dp"
        android:layout_height="17dp"
        android:text="@string/comment_edit"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textLocal"
        app:layout_constraintRight_toLeftOf="@+id/textCommentEdit"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/textCommentEdit"
        android:layout_width="106dp"
        android:layout_height="38dp"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="139dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="291dp" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="44dp"
        android:layout_height="20dp"
        android:text="@string/name_label"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textLogin"
        app:layout_constraintRight_toLeftOf="@+id/textNameCh"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        tools:layout_editor_absoluteY="123dp" />

    <Button
        android:id="@+id/loc_button"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:text="@string/location_btn"
        android:layout_marginRight="43dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="146dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image_label"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textComment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintVertical_bias="0.094" />

    <ImageView
        android:id="@+id/photoView"
        android:layout_width="109dp"
        android:layout_height="101dp"
        app:srcCompat="@android:drawable/btn_star_big_off"
        app:layout_constraintLeft_toRightOf="@+id/textImage"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintTop_toTopOf="@+id/textCommentEdit"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.268" />

    <Button
        android:id="@+id/photo_btn"
        android:layout_width="83dp"
        android:layout_height="38dp"
        android:text="@string/make_photo_btn"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/photoView"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/textCommentEdit"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintVertical_bias="0.207" />


</android.support.constraint.ConstraintLayout>
